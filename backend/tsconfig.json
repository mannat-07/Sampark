{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./",                        
    "outDir": "dist",                    
    "strict": true,                        
    "esModuleInterop": true,               
    "allowSyntheticDefaultImports": true,   
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["app", "lib", "server.ts"],
  "ts-node": {
    "esm": true
  }
}
